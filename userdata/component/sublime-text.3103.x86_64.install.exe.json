{
  "component": {
    "name": "sublime-text",
    "version": "3103",
    "arch": "x86-64",
    "action": "install",
    "provider": "exe"
  },
  "parameters": [
    {
      "name": "sources",
      "value": [
        "https://download.sublimetext.com/Sublime%20Text%20Build%203103%20x64%20Setup.exe"
      ]
    },
    {
      "name": "args",
      "value": [
        "/VERYSILENT",
        "/NORESTART",
        "/TASKS=\"contextentry\""
      ]
    },
    {
      "name": "post-install",
      "value": [
        {
          "provider": "powershell-function",
          "parameters": [
            {
              "name": "command",
              "value": "OpenCloudConfig.Get-File"
            },
            {
              "name": "parameters",
              "value": [
                {
                  "name": "sources",
                  "value": [
                    "http://sublime.wbond.net/Package%20Control.sublime-package"
                  ]
                },
                {
                  "name": "target",
                  "value": "$env:SystemDrive\\Users\\Administrator\\AppData\\Roaming\\Sublime Text 3\\Packages\\Package Control.sublime-package"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "name": "validations",
      "value": [
        {
          "provider": "powershell-function",
          "parameters": [
            {
              "name": "command",
              "value" "Test-Path"
            },
            {
              "name": "parameters",
              "value": [
                {
                  "name": "Path",
                  "value": [
                    "$env:ProgramFiles\\Sublime Text 3\\sublime_text.exe",
                    "$env:ProgramFiles\\Sublime Text 3\\subl.exe",
                    "$env:SystemDrive\\Users\\Administrator\\AppData\\Roaming\\Sublime Text 3\\Packages\\Package Control.sublime-package"
                  ]
                },
                {
                  "name": "ErrorAction",
                  "value": "SilentlyContinue"
                }
              ]
            },
            {
              "name": "expect",
              "value": [
                true,
                true,
                true
              ]
            }
          ]
        },
        {
          "provider": "cmd",
          "parameters": [
            {
              "name": "command",
              "value" "$env:ProgramFiles\\Sublime Text 3\\subl.exe"
            },
            {
              "name": "args",
              "value": [
                "-v"
              ]
            },
            {
              "name": "expect",
              "value": "Sublime Text Build 3103"
            }
          ]
        }
      ]
    }
  ]
}